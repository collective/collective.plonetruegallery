<div class="supersized_wrapper">

	<!--Thumbnail Navigation-->
	<div id="prevthumb" tal:condition="view/settings/supersized_thumbnail_navigation"></div>
	<div id="nextthumb" tal:condition="view/settings/supersized_thumbnail_navigation"></div>

	<!--Arrow Navigation-->
	<a id="prevslide" class="load-item" tal:condition="view/settings/supersized_show_controls"></a>
	<a id="nextslide" class="load-item" tal:condition="view/settings/supersized_show_controls"></a>

	<div id="thumb-tray" class="load-item" tal:condition="view/settings/supersized_thumb_links" >
		<div id="thumb-back"></div>
		<div id="thumb-forward"></div>
	</div>

	<!--Time Bar-->
	<div id="progress-back" class="load-item" tal:condition="view/settings/supersized_progress_bar">
		<div id="progress-bar"></div>
	</div>

	<!--Control Bar-->
	<div id="controls-wrapper" class="load-item" tal:condition="view/settings/supersized_show_controls">
		<div id="controls">

			<a id="play-button"><img id="pauseplay" src="++resource++plonetruegallery.resources/supersized/pause.png"/></a>

			<!--Slide counter-->
			<div id="slidecounter">
				<span class="slidenumber"></span> / <span class="totalslides"></span>
			</div>

			<!--Slide captions displayed here-->
			<div id="slidecaption"></div>

			<!--Thumb Tray button-->
			<a id="tray-button"><img id="tray-arrow" src="++resource++plonetruegallery.resources/supersized/button-tray-up.png"/></a>

			<!--Navigation-->
			<ul id="slide-list"></ul>

		</div>
	</div>

</div>